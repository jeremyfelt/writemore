{
	"name": "writemore",
	"version": "2.0.0",
	"description": "A WordPress theme.",
	"devDependencies": {
		"@wordpress/scripts": "^27.2.0",
		"@wordpress/stylelint-config": "^21.34.0",
		"postcss-cli": "^11.0.0",
		"postcss-import": "^16.0.0",
		"postcss-preset-env": "^9.3.0"
	},
	"scripts": {
		"build": "npm run build:theme",
		"build:theme": "npm run postcss:editor",
		"postcss:editor": "postcss -o editor-style.css style.css",
		"lint": "npm run lint:styles",
		"lint:styles": "stylelint style.css"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeremyfelt/writemore.git"
	},
